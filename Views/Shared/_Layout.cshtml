@{
    ViewData["Title"] = "Home";  // Đặt tiêu đề trang
    var role = Context.Session.GetString("Role") ?? "Guest";  // Lấy role từ session
    var studentId = Context.Session.GetInt32("StudentId") ?? 0;  // Lấy studentId từ session
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">  // Khai báo bảng mã
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  // Thiết lập viewport
    <title>Student Information Management System</title>  // Tiêu đề trình duyệt
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">  // Import Bootstrap CSS
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        // Thanh navbar
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SIMS</a>  // Logo
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                // Nút toggle
                <span class="navbar-toggler-icon"></span>  // Icon toggle
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                // Menu có thể thu gọn
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>  // Link trang chủ
                    </li>
                    @if (role == "Admin")  // Menu Admin
                    {
                        // Các menu quản lý...
                    }
                    // Các menu role khác...
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link text-light">Role: @role</span>  // Hiển thị role
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="@Url.Action("Logout", "Auth")">Logout</a>  // Nút đăng xuất
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()  // Nội dung chính của trang sẽ được render ở đây
    </div>

    <footer class="text-center py-4">
        // Footer
        <p>&copy; 2024 SIMS</p>  // Bản quyền
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>  // Bootstrap JS
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>  // jQuery
</body>
</html>