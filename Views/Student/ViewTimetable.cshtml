<!-- View xem thời khóa biểu -->
@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Layout chung
}
@model List<SIMS_App.Models.Timetable>  // Model là danh sách thời khóa biểu

<h2>My Timetable</h2>  <!-- Tiêu đề -->
<!-- Bảng thời khóa biểu -->
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Student Name</th>
            <th>Subject</th>
            <th>Class</th>
            <th>Teacher</th>
            <th>Start Time</th>  <!-- Thời gian bắt đầu -->
            <th>End Time</th>  <!-- Thời gian kết thúc -->
        </tr>
    </thead>
    <tbody>
        @foreach (var timetable in Model)  // Duyệt qua từng mục
        {
            <tr>
                <td>@timetable.StudentName</td>  <!-- Tên SV -->
                <td>@timetable.Subject</td>  <!-- Môn học -->
                <td>@timetable.ClassName</td>  <!-- Lớp -->
                <td>@timetable.TeacherName</td>  <!-- Giáo viên -->
                <td>@timetable.StartTime</td>  <!-- Bắt đầu -->
                <td>@timetable.EndTime</td>  <!-- Kết thúc -->
            </tr>
        }
    </tbody>
</table>